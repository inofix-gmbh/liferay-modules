<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" 
    "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
    <portlet>
        <portlet-name>newsletter-portlet</portlet-name>
        <icon>/icon.png</icon>
        <configuration-action-class>ch.inofix.portlet.newsletter.action.ConfigurationActionImpl</configuration-action-class>
        <indexer-class>ch.inofix.portlet.newsletter.search.MailingIndexer</indexer-class>
        <indexer-class>ch.inofix.portlet.newsletter.search.NewsletterIndexer</indexer-class>
        <indexer-class>ch.inofix.portlet.newsletter.search.SubscriberIndexer</indexer-class>
        <scheduler-entry>
            <scheduler-event-listener-class>ch.inofix.portlet.newsletter.messaging.CheckMailingMessageListener</scheduler-event-listener-class>
            <trigger>
                <simple>
                    <property-key>mailing.check.interval</property-key>
                    <time-unit>minute</time-unit>
                </simple>
            </trigger>
        </scheduler-entry>
        <header-portlet-css>/css/main.css</header-portlet-css>
        <footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
        <css-class-wrapper>portlet-newsletter</css-class-wrapper>
    </portlet>
    <role-mapper>
        <role-name>administrator</role-name>
        <role-link>Administrator</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>guest</role-name>
        <role-link>Guest</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>power-user</role-name>
        <role-link>Power User</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>user</role-name>
        <role-link>User</role-link>
    </role-mapper>
</liferay-portlet-app>