<model-hints>

	<hint-collection name="TEXTAREA">
	    <hint name="display-height">105</hint>
	    <hint name="display-width">500</hint>
	    <hint name="max-length">4000</hint>
	</hint-collection>
	<hint-collection name="URL">
	    <hint name="max-length">4000</hint>
	</hint-collection>

	
	<model name="ch.inofix.portlet.timetracker.model.TaskRecord">
		<field name="uuid" type="String" />
		<field name="taskRecordId" type="long" />
		<field name="groupId" type="long" />
		<field name="companyId" type="long" />
		<field name="userId" type="long" />
		<field name="userName" type="String" />
		<field name="createDate" type="Date" />
		<field name="modifiedDate" type="Date" />
		<field name="status" type="int" />
		<field name="workPackage" type="String" >
			<validator name="required" />
		    <hint name="display-width">500</hint>
    	    <hint name="max-length">250</hint>
		</field>
		<field name="description" type="String">
			<validator name="required" />
		    <hint name="display-height">105</hint>
		    <hint name="display-width">500</hint>
		    <hint name="max-length">5000</hint>		
		</field>
		<field name="ticketURL" type="String">
		    <hint name="display-width">500</hint>
    	    <hint name="max-length">250</hint>
		</field>		
		<field name="startDate" type="Date">
			<hint name="show-time">false</hint>
		</field>
		<field name="endDate" type="Date">
			<hint name="show-time">false</hint>
		</field>
		<field name="duration" type="long" />
	</model>
</model-hints>